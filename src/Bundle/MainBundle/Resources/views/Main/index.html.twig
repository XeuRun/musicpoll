{% extends 'MainBundle::layout.html.twig' %}

{% block body %}
    <div ng-controller="PopupMessageController as popupMessage" class="pull-right">
        <alert type="[[ popupMessage.type ]]" ng-show="popupMessage.show">[[ popupMessage.message ]]</alert>
    </div>
    <div ng-controller="ModalFormController as modalForm" class="pull-left">
        <a class="add-new-song circle-button btn btn-primary btn-lg" ng-click="modalForm.open()">
            <span class="glyphicon glyphicon-plus"></span>
        </a>
    </div>
    <div ng-controller="PlayerController as player">
        <div class="player">
            <div class="btn-group" role="group">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-primary btn-lg" ng-disabled="player.playing == null" ng-click="player.play()">
                        <span ng-hide="player.playing" class="glyphicon glyphicon-play"></span>
                        <span ng-show="player.playing" class="glyphicon glyphicon-pause"></span>
                    </a>
                    <a class="btn btn-primary btn-lg" ng-click="player.next()">
                        <span ng-show="player.song" class="glyphicon glyphicon-forward"></span>
                        <span ng-hide="player.song" class="glyphicon glyphicon-cd"></span>
                    </a>
                {% endif %}
                <a class="btn btn-primary btn-lg" ng-click="player.mute()">
                    <span ng-hide="player.muted" class="glyphicon glyphicon-volume-down"></span>
                    <span ng-show="player.muted" class="glyphicon glyphicon-volume-up"></span>
                </a>
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="btn-group-vertical" role="group" style="margin-left: 3px;">
                        <a style="margin-top: 1px;" ng-disabled="!player.song" class="btn btn-primary btn-xs">
                            <span class="glyphicon glyphicon-chevron-up" ng-click="player.setVolume(true)"></span>
                        </a>
                        <a style="margin-top: 1px;" ng-disabled="!player.song" class="btn btn-primary btn-xs">
                            <span class="glyphicon glyphicon-chevron-down" ng-click="player.setVolume(false)"></span>
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <main>
        {% if is_granted('ROLE_PLAYER') %}
            <section ng-controller="PlayerController as player">
                <div>
                </div>
            </section>
        {% endif %}
        <section ng-controller="ListController as list">
            <div class="pull-left">
                <h2 style="text-align: center">Список</h2>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="btn-group" data-toggle="buttons">
                            <label class="btn btn-primary" ng-class="{active: !list.onlyMy}" ng-click="list.onlyMy = false; list.authorId = '';">
                                <input type="radio" name="options" autocomplete="off" checked>Все
                            </label>
                            <label class="btn btn-primary" ng-class="{active: list.onlyMy}" ng-click="list.onlyMy = true; list.setId();">
                                <input type="radio" name="options" autocomplete="off">Мои
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="btn-group" data-toggle="buttons">
                            <label class="btn btn-primary" ng-class="{active: !list.top}" ng-click="list.top = false;">
                                <input type="radio" name="options" autocomplete="off" checked>Последние
                            </label>
                            <label class="btn btn-primary" ng-class="{active: list.top}" ng-click="list.top = true;">
                                <input type="radio" name="options" autocomplete="off">Топ
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div class="input-group">
                            <input type="text" class="form-control" ng-model="list.searchText" placeholder="Поиск...">
                            <span class="input-group-btn">
                                <button type="button" ng-click="list.searchText = ''" class="btn btn-default" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
                </br>
                <ul style="overflow-y: scroll;overflow-x: hidden;height:500px;" class="list-group" lr-infinite-scroll="list.nextBlock" scroll-threshold="200" time-threshold="600">
                    <li ng-repeat="song in list.songs | filterObjectBy:{ 'author': list.authorId } | filterObjectBy:list.searchText:'title' | orderObjectBy:list.top ? 'counter' : 'id':true" class="list-group-item">
                        <span class="badge">
                            <span ng-click="list.like([[ song.id ]])" class="glyphicon glyphicon-hand-up"></span>
                            <span ng-click="list.dislike([[ song.id ]])" class="glyphicon glyphicon-hand-down"></span>
                            <span ng-click="list.play([[ song.id ]])" ng-class="{'glyphicon-play': !list.playing[[[ song.id ]]], 'glyphicon-stop': list.playing[[[ song.id ]]]}" class="glyphicon"></span>
                            {% if is_granted('ROLE_ADMIN') %}
                                <span ng-click="list.remove([[ song.id ]])" class="glyphicon glyphicon-remove"></span>
                            {% endif %}
                            [[ song.counter ]]
                        </span>
                        [[ song.title ]]
                    </li>
                </ul>
            </div>
        </section>
    </main>
{% endblock %}